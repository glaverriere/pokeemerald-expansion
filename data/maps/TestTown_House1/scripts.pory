script TestTown_House1_Dude {
    lockall
    if (flag(FLAG_RECEIVED_LIGHT_BALL)) {
        msgbox(TestTown_House1_Dude_Evolved)
        giveitem(ITEM_LIGHT_BALL)
        setflag(FLAG_RECEIVED_LIGHT_BALL)
    }
    msgbox("Maybe it will be useful to you.")
    closemessage
    releaseall
}

